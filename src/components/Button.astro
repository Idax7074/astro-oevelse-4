---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}> <slot /></button>

<style>
  button {
    padding: 1rem;
    border: none;
    border-radius: 5px;
  }

  .primary {
    background-color: violet;
    color: white;
  }

  .secondary {
    background-color: white;
    color: violet;
  }

  .small {
    font-size: 1rem;
  }

  .medium {
    font-size: 2rem;
  }

  .large {
    font-size: 3rem;
  }
</style>
